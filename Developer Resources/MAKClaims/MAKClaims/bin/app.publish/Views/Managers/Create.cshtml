            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

<div>
      @Html.ActionLink("Back to Home", "ManagerHome", "Managers", new { area = "" }, null)
</div>
</body>
</html>
