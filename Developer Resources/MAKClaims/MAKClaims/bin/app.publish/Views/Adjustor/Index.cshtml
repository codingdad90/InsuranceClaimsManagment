                    @Html.DisplayFor(modelItem => item.Manager.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AdjustorId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AdjustorId }) |
