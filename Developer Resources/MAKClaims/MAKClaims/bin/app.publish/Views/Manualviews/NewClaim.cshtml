            @Html.DropDownList("PropertyId", null, htmlAttributes: new { @class = "form-control" }) @Html.ActionLink("New Property", "NewProperty", "ManualViews", routeValues: new { @returnUrl = Url.Action(ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), ViewContext.RouteData.Values["id"]) }, new { area = "" })
            @Html.ValidationMessageFor(model => model.PropertyId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateOfLoss, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateOfLoss, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateOfLoss, "", new { @class = "text-danger" })
        </div>
    </div>



