@model MAKClaims.Models.ClaimAction


<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#newpropertymodal"> New Property button</a>
<div class="modal fade" id="newpropertymodal">
    <div class=" modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"> New Propety</h2>
            </div>
            <div class="modal-body">
                <form id="newpropertyform" action="/ManualViews/SaveProperty" method="post">
                    <label>Insured</label>
                    @Html.DropDownList("InsuredId", null, htmlAttributes: new { @class = "form-control" })
                    *<label>Date</label>
                    @Html.EditorFor(model => model.Date, new { @type = "date" })
                    <label>City</label>
                    @Html.TextBoxFor(model => model.DollarAmount)
                    <label>State</label>

                    <label>Zip</label>


                </form>
            </div>
            <div class="modal-footer">
                <div class="btn-group">
                    <a href="#" id="btnSave" class="btn btn-primary mr-2"> Add Property</a>
                    <a href="#" id="btnCancel" class="btn btn-danger"> Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>


