@model IEnumerable<MAKClaims.Models.Manager>

@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
         @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Managers", new { id = item.ManagerId })" class="btn btn-primary btn-sm" style="background-color: cadetblue">
                        <i class="fa fa-edit"></i>
                        <span><small>Edit</small></span>
                    </a>
                    <a href="@Url.Action("Details", "Managers", new { id = item.ManagerId })" class="btn btn-primary btn-sm" style="background-color: cadetblue">
                        <i class="fa fa-eye"></i>
                        <span><small>View</small></span>
                    </a>
                    <a href="@Url.Action("Delete", "Managers", new { id = item.ManagerId })" class="btn btn-primary btn-sm" style="background-color: cadetblue">
                        <i class="fa fa-minus-square"></i>
                        <span><small>Delete</small></span>
                    </a>

                    @*@Html.ActionLink("Edit", "Edit", new { id = item.ManagerId }) |
        @Html.ActionLink("Details", "Details", new { id = item.ManagerId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ManagerId })*@
                </td>
            </tr>
        }

    </table>
</body>
</html>
